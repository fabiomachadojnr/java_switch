package exerciciosdeswitch;

import java.util.Scanner;

public class exercicio3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
Scanner leitor = new Scanner (System.in);
		
		int cod;
		
		System.out.println("Digite o código no Menu:");
		cod=leitor.nextInt();
		
		switch (cod) {
		case 1:
			System.out.println("Rotina de inclusão de Alunos.");
			break;
		case 2:
			System.out.println("Rotina de alteração de Alunos.");
			break;
		case 3:
			System.out.println("Rotina de exclusão de Alunos.");
			break;
		case 4:
			System.out.println("Rotina de consulta de Alunos.");
			break;
			default:
				System.out.println("Não é possível realizar esta opção.");	
	}
 }}