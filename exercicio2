package exerciciosdeswitch;

import java.util.Scanner;

public class exercicio2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

Scanner leitor = new Scanner (System.in);
		
		int cod;
		int qnt;
		
		System.out.println("Digite o código do produto:");
		cod=leitor.nextInt();
		System.out.println("Digite a quantidade:");
		qnt=leitor.nextInt();
		
		switch (cod) {
		case 100:
			System.out.println("Esta sendo comprado um "+qnt+"x Cachorro Quente que custa "+3.2*qnt+" reais.");
			break;
		case 101:
			System.out.println("Esta sendo comprado um "+qnt+"x Bauru Simples que custa "+4.3*qnt+" reais.");
			break;
		case 102:
			System.out.println("Esta sendo comprado um "+qnt+"x Bauru com Ovo que custa "+5.5*qnt+" reais.");
			break;
		case 103:
			System.out.println("Esta sendo comprado um "+qnt+"x Hambúrguer que "+3.2*qnt+" reais.");
			break;
		case 104:
			System.out.println("Esta sendo comprado um "+qnt+"x Chesseburguer que "+4.3*qnt+" reais.");
			break;
		case 105:
			System.out.println("Esta sendo comprado um "+qnt+"x Refrigerante que custa "+4*qnt+" reais.");
			break;
			
			default:
				System.out.println("O produto cujo código foi inserido não foi encontrado.");
		}	
	}
}