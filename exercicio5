package exerciciosdeswitch;

import java.util.Scanner;

public class exercicio5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner leitor = new Scanner (System.in);
		
		float price;
		int pag;
		
		System.out.println("Digite o preço da etiqueta");
		price=leitor.nextFloat();
		System.out.println("Selecione a forma de pagamento:");
		System.out.println("À vista em dinheiro ou cheque, com 10% de desconto (1)");
		System.out.println("À vista com cartão de crédito, com 5% de desconto (2)");
		System.out.println("Em 2 vezes, preço normal de etiqueta sem juros (3)");
		System.out.println("Em 3 vezes, preço de etiqueta com acréscimo de 10% (4)");
		pag= leitor.nextInt();
		
		switch (pag) {
		
		case 1:
	    System.out.println("Irá custar "+(price-(price/100*10)));
	    break;
		
		case 2:
		System.out.println("Irá custar "+(price-(price/100*5)));
		break;
		
		case 3:
		System.out.println("Irá custar 2 parcelas de "+price/2);
		break;
		
		case 4:
		System.out.println("Irá custar 3 parcelas de "+(price+(price/100*10))/3);
		break;
		
		default:
		System.out.println("Essa opção não está disponível.");

		}
	}
}