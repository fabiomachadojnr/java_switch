package exerciciosdeswitch;

import java.util.Scanner;

public class exercicio1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner leitor = new Scanner (System.in);
		
		int cod;
		
		System.out.println("Digite aqui o código do produto:");
		cod=leitor.nextInt();
		
		switch (cod) {
		case 1:
			System.out.println("O produto cujo código foi inserido é: Parafuso");
			break;
		case 2:
			System.out.println("O produto cujo código foi inserido é: Porca");
			break;
		case 3:
			System.out.println("O produto cujo código foi inserido é: Prego");
			break;
		case 4:
			System.out.println("O produto cujo código foi inserido é: Ferramenta");
			break;
			default:
				System.out.println("O produto cujo código foi inserido não foi encontrado.");
		}

	}

}